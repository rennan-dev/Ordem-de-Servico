
<main>
    {{!--Exibir mensagem, se necess√°rio--}}
    {{#if semRegistros}}
        <h1 class="produtoNaoEncontrado">Nenhum produto encontrado!</h1>
    {{/if}}

    {{!--Listagem de produtos--}}
    <div class="container">
        <div class="row">
            {{#each produtos}}
                <div class="col-12 col-sm-6 col-md4 col-lg-3">
                    <div class="card">
                        <img src="../imagens/{{imagem}}">
                        <div class="textos">
                            <p>{{nome}}</p>
                            <p>R${{valor}}</p>
                        </div>
                        <a href="/formularioEditar/{{codigo}}" class="btn btn-warning">Alterar</a>
                        <a href="/remover/{{codigo}}&{{imagem}}" class="btn btn-danger">Remover</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

</main>